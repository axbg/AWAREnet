{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "components/*": [
                "src/components/*"
            ],
            "constants/*": [
                "src/constants/*"
            ],
            "assets/*": [
                "src/assets/*"
            ],
            "pages/*": [
                "src/pages/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}